{% extends "layout.njk" %}
{% block content %}
    <main>
        <div class="content-recipe">
        <div class="header-recipe">
            <h1 class="show" >Receita: {{item.title}}</h1>
            <a href="/admin/recipes/{{item.id}}/edit" class="button">Editar Receita</a>
        </div>
            <div class="card" id="{{item.image}}">
                <img src="{{item.image}}" alt="{{item.name}}">
                <div class="card_title"><h1>{{item.title}}</h1></div>
                <div class="card_author">
                    <h4> {{item.author}}</h4>
                </div>
            </div>        
            <div class="recipe-details">
                <div id="ingredients" class="topic">
                    <h3>Ingredientes</h3>
                    <div class="topic-content">
                        <ul>
                            {% for ingredient in item.ingredients %}
                                <li>{{ingredient}}</li>
                            {%endfor%}
                        </ul>
                    </div>
                </div>
                <div id="preparation" class="topic">
                    <h3>Preparo</h3>
                    <div class="topic-content">
                        <ul>
                            {% for preparation in item.preparation %}
                                <li>{{preparation}}</li>
                            {%endfor%}
                        </ul>
                    </div>
                </div>
                <div id="information" class="topic">
                    <h3>Informações</h3>
                    <div class="topic-content">
                        <p>{{item.information}}</p>
                    </div>
                </div>
            </div> 
        </div>
    </main>
{% endblock content %}