{% extends "layout.njk" %}
{% block content %}

<main>
    <div class="content-index">
        <div class="header-chef">
        <h1>Gerenciar Chefs</h1>
        <a href="/admin/chefs/create" class="button">Novo Chef</a>
        </div>
        <div class="card-chefs">
            {% for chef in data.chefs %}
            <div class="card-chef">
                <div class="card-img">
                    <img src="{{chef.avatar}}" alt="{{chef.avatar}}">
                </div>
                <div class="card-details">
                    <h4>{{chef.name}}</h4>
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>               
            </div>
            {% endfor %}
        </div>
    </div>
</main>
{% endblock content %}
