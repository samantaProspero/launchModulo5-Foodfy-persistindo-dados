{% extends "layout.njk" %}
{% block content %}

<main>
    <div class="content-index">
        <div class="header header-chef">
            <h1>Gerenciar Chefs</h1>
            <a href="/admin/chefs/create" class="button">Novo Chef</a>
        </div>
        <div class="card-chefs">
            {% for chef in chefs %}
            <div class="card-chef">
                <div class="card-img">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                </div>
                <div class="card-details">
                    <h4>{{chef.name}}</h4>
                    <p>{{chef.total_recipes}} receitas</p> 
                    <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>               
            </div>
            {% endfor %}
        </div>
        
    </div>
</main>
<div class="pagination"
    data-page={{pagination.page}}
    data-total={{pagination.total}}
    data-filter={{filter}}
></div>
{% endblock content %}
