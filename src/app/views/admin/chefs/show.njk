{% extends "layout.njk" %}
{% block content %}
    <main>
        <div class="content-chef">
            <div class="header-chef">
                <h1 class="show" >Chef: {{chef.name}}</h1>
                <a href="/admin/chefs/{{chef.id}}/edit" class="button">Editar Chef</a>
            </div>
            <div class="card-chef-show">
                <img src="{{chef.avatar_url}}" alt="{{chef.name}}">
                <div class="card_author">
                    <h1> {{chef.name}}</h1>
                    <h4>{{chef.total_recipes}} receitas</h4>
                </div>
            </div>
            <div class="chef-show">
                <h2 >Receitas</h2>
            </div>
            <div class="chef-receitas">
                {% for recipe in chefsRecipes%}
                <div class="card">
                    <img src="{{recipe.image}}" alt="{{recipe.title}}">
                
                    <div class="card-details">
                        <h4>{{recipe.title}}</h4>
                        <p>{{recipe.chefname}}</p> 
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div> 
                </div>    
                {%endfor%}
            </div>
        </div>        
    </main>
{% endblock content %}